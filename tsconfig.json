{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		// "sourceMap": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"types": [
			"node"
		],
		"lib": [
			"ESNext",
			"DOM"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}